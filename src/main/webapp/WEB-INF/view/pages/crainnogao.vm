#set($layout="layout/layout.vm")
#set( $page_title = "crainnogao")

<input type="hidden" name="totalPage" id="totalPage" value="$logs.getTotalPage()"/>
<input type="hidden" name="totalRecord" id="totalRecord" value="$logs.getTotalRecord()"/>
<input type="hidden" name="pageNum" id="pageNum" value="$pageNum"/>
<header>
    <div class="navbar-fixed">
        <nav class="index-nav">
            <div class="container">
                <div class="nav-wrapper">
                    <a href="">
                        <img src="/images/crainnogao.png" alt="">
                    </a>
                    <ul class="right hide-on-med-and-down">
                        <li><a href="">首页</a></li>
                        <li><a href="/crainnogao/documents">归档</a></li>
                        <li><a href="/crainnogao/about">关于</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>

<main>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="col s12 m9" style="width: 70%!important;">
                    #if($logs.getDataList().size()==0)
                        <div>
                            对不起主人尚未有任何动态.....<br>感谢您的关注~~~
                        </div>
                    #end
                    #if($logs.getDataList().size()>0)
                        #foreach($logs in $logs1.getDataList())
                            <div class="panel panel-default wenben">
                                <div id="firstshow">
                                    <div class="panel-heading">
                                        <div class="col-lg-12">
                                        <span class="col-lg-8"><a href="/crainnogao/detail?logId=$logs.logId"><blockquote>$logs.logTitle</blockquote></a></span>
                                        <span class="col-lg-4">#dateTimeText($logs.logCreated,'yyyy-MM-dd HH:mm')</span>
                                        </div>
                                    </div>
                                    <div id="firstlog-$foreach.count" class="firstlog"></div>
                                    <div class="panel-footer"><span>关键字：$logs.logSummary</span></div>
                                </div>
                                <input type="hidden" name="logcontentfir" id="logcontentfir-$foreach.count" value="$logs.logContent">
                            </div>
                        #end
                        <ul id="pagination" class="pagination">
                            <li><a href="/crainnogao/?pageNum=1"  id="prevPage" class="prevPage"><i class="material-icons">navigate_before</i></a></li>
                            #foreach($i in [1..$logs.getTotalPage()])
                            <li class="tcdNumber" id="tcdNumber-$foreach.index"><a href="/crainnogao/?pageNum=$i">$i</a></li>
                            #end
                            <li><a href="/crainnogao/?pageNum=$logs.getTotalPage()"  class="nextPage" id="nextPage"><i class="material-icons">navigate_next</i></a></li>
                        </ul>
                    #end
                </div>
                <div class="col m3 mobile-hidden"  style="width: 30%!important;">
                    <div class="col s12 m12">
                        <div id="smoothmenu1" class="card">
                            #if($logs.getDataList().size()!=0)
                                <ul id="tab-menu" class="ddsmoothmenu">
                                    <p class="yinxiang">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;最新笔记</p>
                                    <div id="ajshow">
                                        #foreach($log in $logs.getDataList())
                                            <li class="logTitle"><a href="/crainnogao/detail?logId=$!{log.logId}">$!{log.logTitle}</a></li>
                                        #end
                                    </div>
                                </ul>
                            #end
                        </div>
                    </div>
                    <div class="col s12 m12">
                        <div class="card white darken-2">
                            <div class="card-content black-text">
                                <span class="card-title">策士策士</span>
                            </div>
                            <div class="card-action">
                                <ul>
                                    <li><a href="">Mybatis插入返回主键值</a></li>
                                    <li><a href="">SpringMVC上传图片</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<footer>
    <div class="footer-copyright">
        <div class="container">
            <span>Copyright © crainnogao2016</span>
            <span><a href="/crainnogao/admin/crainnogao_ad">后台登录</a></span>
        </div>
    </div>
</footer>